@article{Nepal.2013, 
  author = {Nepal, Chirag and Hadzhiev, Yavor and Previti, Christopher and Haberle, Vanja and Li, Nan and Takahashi, Hazuki and Suzuki, Ana Maria M and Sheng, Ying and Abdelhamid, Rehab F and Anand, Santosh and Gehrig, Jochen and Akalin, Altuna and Kockx, Christel E M and Sloot, Antoine A J van der and Ijcken, Wilfred F J van and Armant, Olivier and Rastegar, Sepand and Watson, Craig and Strähle, Uwe and Stupka, Elia and Carninci, Piero and Lenhard, Boris and Müller, Ferenc}, 
