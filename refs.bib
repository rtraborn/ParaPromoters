@article{Wagoner.2019, 
  author = {Wagoner, Jason A and Dill, Ken A}, 
  title = {{Opposing pressures of speed and efficiency guide the evolution of molecular machines}}, 
  issn = {0737-4038}, 
  doi = {10.1093/molbev/msz190}, 
  pmid = {31432071}, 
  abstract = {{Many biomolecular machines need to be both fast and efficient. How has evolution optimized these machines along the tradeoff between speed and efficiency? We explore this question using optimizable dynamical models along coordinates that are plausible evolutionary degrees of freedom. Data on eleven motors and ion pumps are consistent with the hypothesis that evolution seeks an optimal balance of speed and efficiency, where any further small increase in one of these quantities would come at great expense to the other. For FoF1-ATPases in different species, we also find apparent optimization of the number of subunits in the c-ring, which determines the number of protons pumped per ATP synthesized. Interestingly, because these ATPases are such major transducers of energy in biology, their performance seems tuned to optimize efficiency, with a smaller pressure on synthesis rate. This modeling shows how structural properties of biomolecular motors and pumps may have evolved to meet the performance needs of particular biological actions.}}, 
